@inherits LineChartBase

<svg class="chart" viewBox="0 0 @Width @Height">
    <text x="@(Width/2)" y="15" font-size="16px" text-anchor="middle">@Title</text>
    <g> @*Y-axis lines*@
        @foreach (double value in YAxis)
        {
            <line x1="@MarginLeft" y1="@GetYCoordinate(value)" x2="@(Width-MarginRight)" y2="@GetYCoordinate(value)" style="stroke:#e0e0e0;stroke-width:1" />
        }
    </g>
    <g> @*Y-axis tick values*@
        @foreach (double value in YAxis)
        {
            <text>
                <text x="@(MarginLeft-10)" y="@GetYCoordinate(value)" font-size="12px" text-anchor="end" dominant-baseline="middle">@value</text>
            </text>
        }
    </g>
    <g transform="rotate(270, 10, @(Height/2))">  @*Y-axis title*@
        <text x="10" y="@(Height/2)" font-size="12px" text-anchor="middle" dominant-baseline="middle">@YAxisTitle</text>
    </g>
    <g> @*X-axis tick values*@
        @foreach (double value in XAxis)
        {
            <text>
                <text x="@GetXCoordinate(value)" y="@GetXAxisTickYCoordinate()" font-size="12px" text-anchor="middle">@value</text>
            </text>
        }
    </g>
    <g> @*X-axis title*@
        <text x="@(Width/2)" y="@GetXAxisTitleY()" font-size="12px" text-anchor="middle" dominant-baseline="middle">@XAxisTitle</text>
    </g>
    <g> @*Chart lines*@
        @foreach (LineSerie s in Data.Series)
        {
            <polyline points="@GetPolylinePoints(s)" class="dataline" style="stroke: @s.Color; stroke-width: @LineWidth;"/>
        }
    </g>
    @if (ShowLegend)
    {
        <Legend Width="Width" Height="Height" Titles="GetTitles()"/>
    }
</svg>

