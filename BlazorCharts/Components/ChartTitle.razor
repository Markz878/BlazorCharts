<text x=@(Width/2) y="15" font-size=@FontSize text-anchor="middle" fill=@FontColor>@Title</text>

@code {
    [Parameter][EditorRequired] public required double Width { get; init; }
    [Parameter][EditorRequired] public required string? Title { get; init; }
    [Parameter] public string FontSize { get; init; } = "16px";
    [Parameter] public string FontColor { get; init; } = "black";
}
