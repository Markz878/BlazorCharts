@if(TooltipInfo is not null && TooltipInfo.Properties is not null)
{
    <g>
        <foreignObject x="0" y="0" width=@Width height=@Height style="pointer-events: none; font-size: @FontSize;">
            <div class="tooltip-container" style="transform: translate(@TooltipInfo.X, @TooltipInfo.Y);">
                @foreach (string tt in TooltipInfo.Properties)
                {
                    <pre class="tooltip-text">@tt</pre>
                }
            </div>
        </foreignObject>
    </g>
}

@code {
    [Parameter][EditorRequired] public required double Width { get; init; }
    [Parameter][EditorRequired] public required double Height { get; init; }
    [Parameter][EditorRequired] public required TooltipInfo TooltipInfo { get; init; }
    [Parameter] public string FontSize { get; set; } = "10px";
}
