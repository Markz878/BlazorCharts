@inherits PieChartBase

<svg class="chart" viewBox="0 0 @Width @Height">
    <ChartTitle Width=@Width Title=@Title FontSize=@TitleFontSize FontColor=@FontColor/>

    <g>
        @{double sum = 0;}
        @foreach(PieItem p in Data.PieItems)
        {
            <path d="M @GetX(sum, R) @GetY(sum, R) A @R @R 0 @GetArcPathArg(p.Value) 0 @GetX(sum+p.Value, R) @GetY(sum+p.Value, R) L @(Width/2) @(Height/2)" fill=@p.Color class="data-item pie-animate" @onmouseover=@(()=>MouseOver(p)) @onmouseout=@MouseLeave/>
            @if (Data.ShowLabels)
            {
                <text>
                    <text x=@GetX(sum+p.Value/2, R * 0.7) y=@GetY(sum+p.Value/2, R * 0.7) font-size=@LabelFontSize fill=@p.LabelColor class="data-label pie-animate">@p.Value</text>
                </text>
            }
            sum += p.Value;
        }
    </g>
    @if (ShowLegend)
    {
        <Legend Height=@Height Width=@Width Titles=@GetTitles() FontSize=@FontSize FontColor=@FontColor/>
    }
    @if (showTooltip)
    {
        <Tooltip Height=@Height Width=@Width TooltipInfo=@tooltipInfo FontSize=@FontSize/>
    }
</svg>