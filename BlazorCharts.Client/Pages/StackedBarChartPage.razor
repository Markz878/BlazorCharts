@page "/stackedbarchart"

<PageTitle>Stacked Bar Chart</PageTitle>

@if(data is not null)
{
    <StackedBarChart Data="data"/>
}

@code {
    private StackedBarSeries? data;

    protected override void OnInitialized()
    {
        data = new StackedBarSeries(Enumerable.Range(0, 5).Select(x => $"Item {x}").ToList(),
            new StackedBarSerie("red", Enumerable.Range(0, 5).Select(x => (x + 1) * 100d).ToList()),
            new StackedBarSerie("blue", Enumerable.Range(0, 5).Select(x => (x + 1) * 200d).ToList()));
    }
}
