@page "/"

<PageTitle>Scatter Chart</PageTitle>

<ScatterChart Data="data" Title="Scatter Chart" Width=600 YAxisTitle="Y-axis values" XAxisTitle="X-axis values" TitleFontSize="15px" FontSize="12px" FontColor="rgb(40,40,40)"/>

<div class="d-flex justify-content-center mb-4">
    <button class="btn btn-primary mx-2" @onclick="MovePoints" disabled="@movePoints">Move points</button>
    <button class="btn btn-danger mx-2" @onclick="CancelMove" disabled="@(!movePoints)">Cancel</button>
</div>



