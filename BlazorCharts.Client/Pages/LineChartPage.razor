@page "/linechart"

<PageTitle>Line Chart</PageTitle>

<LineChart Data="data" Title="Line Chart" Width=600 YAxisTitle="Y-axis values" XAxisTitle="X-axis values" FontSize="10px" FontColor="rgb(40,40,40)"/>

<div class="d-flex justify-content-center mb-4">
    <button class="btn btn-primary mx-2" @onclick="MovePoints" disabled="@movePoints">Move lines</button>
    <button class="btn btn-danger mx-2" @onclick="CancelMove" disabled="@(!movePoints)">Cancel</button>
</div>